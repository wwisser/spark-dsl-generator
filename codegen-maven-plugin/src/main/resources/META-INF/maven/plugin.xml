<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>Spark DSL generator</name>
  <description>Java DSL generator which supports Parquet and SQL files with Hive/Iceberg dialect.</description>
  <groupId>io.sparkdsl</groupId>
  <artifactId>codegen-maven-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>

  <goalPrefix>generate</goalPrefix>

  <mojos>
    <mojo>
      <goal>generation</goal>
      <description>Generates the DSL</description>
      <requiresProject>true</requiresProject>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <executionStrategy>once-per-session</executionStrategy>
    </mojo>
  </mojos>
</plugin>
